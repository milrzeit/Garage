// install this on arduino yun and
https://www.arduino.cc/en/Tutorial/Bridge

// setup dev server based on this 
https://www.npmjs.com/package/json-server

npm install -g json-server

cat < db.json
{
  "open": [
    {
      "response": "OK-Open"
    }
  ],
  "close": [
    {
      "response": "OK-Close"
    }
  ]
}
^d

json-server --watch db.json